@model BitCubeStoreImplementation.Models.ProductType

@{
    ViewData["Title"] = "Item";
}

<h1>Find Product &nbsp; &nbsp; <i class="bi bi-laptop"></i> | <i class="bi bi-tablet-landscape-fill"></i> | <i class="bi bi-phone-vibrate"></i></h1> 


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Item">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductCategory" class="control-label"></label>
                <select asp-for="ProductCategory" asp-items="Html.GetEnumSelectList<ProductCategory>()" class="form-control" ></select>
                <span asp-validation-for="ProductCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Find Item" class="btn btn-success btn-block" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
