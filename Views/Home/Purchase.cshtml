@model BitCubeStoreImplementation.Models.Product

@{
    ViewData["Title"] = "Purchase";
}

<h1>Purchase Product</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Purchase">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" asp-items="Html.GetEnumSelectList<ProductCategory>()" class="form-control" ></select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
        
            <div class="form-group">
                <label asp-for="NumberOfItems" class="control-label">Number of Items</label>
                <input asp-for="NumberOfItems" class="form-control" />
                <span asp-validation-for="NumberOfItems" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Purchase" class="btn btn-success btn-block" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
